    "version": "0.2.0",
    "configurations": [

        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Debug index.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            // "program": "${workspaceFolder}/src/index.ts",
            // "preLaunchTask": "tsc: build - tsconfig.json",
            // "preLaunchTask": "npx tsc -p tsconfig-build.json --skipLibCheck",
            "preLaunchTask": "npm: build",
            "envFile": "${workspaceFolder}/.envrc_debug",
            "program": "${workspaceFolder}/lib/index.js",
            "console": "integratedTerminal",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}
